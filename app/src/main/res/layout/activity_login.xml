<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/login_upper_top" />

        <ImageView

            android:id="@+id/img_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/login_logo" />

        <com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView
            android:id="@+id/tv_heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Best Way to Communicate"
            android:textColor="@color/text_color_grey"
            android:textSize="12sp">

        </com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView>

        <com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView
            android:id="@+id/tv_heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_heading1"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/text_color_grey"
            android:textSize="15sp"
            android:textStyle="bold">

        </com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView>


        <LinearLayout
            android:id="@+id/lnrMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_heading2"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/welcome_margin"
                android:layout_marginLeft="@dimen/welcome_margin"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/Precise_text_title_large"
                app:strokeWidth="5dp"
                app:cardElevation="5dp"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_marginStart="@dimen/welcome_margin"
                android:layout_marginRight="@dimen/welcome_margin"
                android:background="@drawable/bg_white_solid_yellow_rounded_corner">
                <!--  <com.google.android.material.card.MaterialCardView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginHorizontal="30dp"
                      android:elevation="10dp"
                      android:padding="10dp"
                      app:cardCornerRadius="15dp">-->

                <com.nitesh.dubaiinterview.CustomPackage.TypefacedEditText
                    android:id="@+id/ed_contact"
                    style="@style/PreciseEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:layout_marginStart="@dimen/padding_10"
                    android:padding="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:hint="Enter Contact Number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/blackLight" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/welcome_margin"
                android:layout_marginLeft="@dimen/welcome_margin"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/Precise_text_title_large"
                app:strokeWidth="5dp"
                app:cardElevation="5dp"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_marginStart="@dimen/welcome_margin"
                android:layout_marginRight="@dimen/welcome_margin"
                android:background="@drawable/bg_white_solid_yellow_rounded_corner">
                <!--<com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="15dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    app:cardCornerRadius="15dp">-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.nitesh.dubaiinterview.CustomPackage.TypefacedEditText
                        android:id="@+id/ed_pass"
                        style="@style/PreciseEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginStart="@dimen/padding_10"
                        android:background="@null"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/blackLight" />
                    <ImageButton
                        android:id="@+id/img_show"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="-40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingEnd="10dp"
                        android:src="@drawable/show"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        app:tint="@color/yellow" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView
                android:id="@+id/button"
                style="@style/PreciseLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:paddingHorizontal="35dp"
                android:paddingVertical="10dp"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:customTypeface="latoSemibold">

            </com.nitesh.dubaiinterview.CustomPackage.TypefacedTextView>




        </LinearLayout>
    </RelativeLayout>
</ScrollView>